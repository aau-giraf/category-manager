<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dk.aau.cs.giraf.pictoadmin.fragments.InitialFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/app_icon"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:layout_marginBottom="20dp" />

        <View
            android:background="#000000"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/no_categories_selected_text"
            android:textSize="20sp"
            android:layout_marginBottom="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <dk.aau.cs.giraf.gui.GirafButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:text="@string/create_new_category"
                android:layout_marginRight="20dp"
                android:onClick="onCreateCategoryButtonClicked" />

            <dk.aau.cs.giraf.gui.GirafButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:text="@string/administrate_citizen" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
