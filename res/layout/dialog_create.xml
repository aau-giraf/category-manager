<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:background="@color/transparent_color"
    style="@style/CategoryDialogCrate"
    >
    <RelativeLayout
        android:id="@+id/back_dim_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C0000000"
        android:visibility="visible" >
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/category_create_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gdialog_background"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        style="@style/NoActionBar"
        >
        <EditText
            android:id="@+id/username"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:hint="Titel" />
        <dk.aau.cs.giraf.gui.GButton
            android:id="@+id/colorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:text="Farve"
            android:onClick="setNewCategoryColor"
            android:gravity="center_horizontal"
            android:layout_below="@id/username"
            android:layout_centerHorizontal="true"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/colorButton"
            android:layout_weight="1">
            <dk.aau.cs.giraf.gui.GButton
                android:layout_marginRight="2dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="16dp"
                android:id="@+id/dialog_ok"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@android:string/ok"/>
            <dk.aau.cs.giraf.gui.GButton
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="16dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:layout_toRightOf="@id/dialog_ok"/>

        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>